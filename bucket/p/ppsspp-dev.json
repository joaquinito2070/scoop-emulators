        "64bit": {
            "url": "https://buildbot.orphis.net/ppsspp/index.php?m=dl&rev=v1.15.4-256-g72af8f6e9&platform=windows-amd64#/dl.7z",
            "hash": "6f8b64cf5037f8107bb336172b90a07070b728027461edf9ce780af42040abac",
